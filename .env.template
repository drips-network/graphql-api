GITHUB_TOKEN=string # Optional. GitHub personal access token for authenticated API requests. Without this, falls back to unauthenticated requests with lower rate limits.
REDIS_URL=string # Optional. Redis connection URL for caching responses. Without this, no caching is performed.

ORCID_API_ENDPOINT=string # Optional. The ORCID API endpoint. Defaults to 'https://pub.orcid.org/v3.0'.
ORCID_CLIENT_ID=string # Required. ORCID OAuth client identifier.
